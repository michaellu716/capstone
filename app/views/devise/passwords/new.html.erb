<div class="container">
  <div class="row signup_row">
  <div class="col-sm-4 col-sm-offset-4">
    <div class="light-well">
      <h2 class="page-header text-center">Forgot Your Password?</h2>
    <br/>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-group">
        <%= f.email_field :email, required: true, autofocus: true, placeholder: "Email Address", input_html: { autocomplete: "email" }, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send reset password instructions", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
