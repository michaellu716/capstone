<div class="container">
  <div class="row signup_row">
  <div class="col-sm-4 col-sm-offset-4">
    <div class="light-well">
      <h2 class="page-header text-center">Log In</h2>
    <br/>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: "Email Address", input_html: { autocomplete: "email" }, class: "form-control" %>
      </div>
      <div class="form-group">
      <%= f.password_field :password, autocomplete: "off", placeholder: "Password", input_html: { autocomplete: "password" }, class: "form-control" %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn btn-primary'  %>
      </div>
    <% end %>

<%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>